{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    // "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/backend/**/*.ts", 
    "src/backend/types/express.d.ts"
  ],
  "exclude": ["node_modules"]
}