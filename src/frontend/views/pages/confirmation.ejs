<%- include('../partials/header.ejs', { pageTitle: pageTitle }) %>

<main class="container py-5 text-center">
    <div class="card p-5 mx-auto" style="max-width: 600px;">
        <h1 class="display-4 text-success mb-4">Order Confirmed!</h1>
        <p class="lead">Thank you for your purchase. Your order has been successfully placed.</p>
        
        <div class="alert alert-success mt-4 mb-4" role="alert">
            <h5 class="alert-heading">Your Order ID:</h5>
            <p class="mb-0 fw-bold display-6 text-dark"><%= orderId %></p>
        </div>

        <p class="mb-4">A confirmation email and WhatsApp alert (if configured) have been sent to you with all the details.</p>
        
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a href="/books" class="btn btn-primary btn-lg px-4 gap-3">Continue Shopping</a>
            <a href="/profile" class="btn btn-outline-secondary btn-lg px-4">View Order History</a>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs') %>