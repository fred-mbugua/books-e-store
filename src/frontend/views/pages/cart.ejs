<%- include('../partials/header.ejs', { pageTitle: pageTitle }) %>

<main class="container py-5">
    <h1 class="page-header">Your Shopping Cart</h1>

    <% if (cart.items.length === 0) { %>
        <div class="alert alert-info text-center" role="alert">
            Your cart is empty. <a href="/books" class="alert-link">Start browsing our catalog!</a>
        </div>
    <% } else { %>
        <div class="row">
            <div class="col-lg-8">
                <% cart.items.forEach(item => { %>
                    <div class="card mb-3 p-3">
                        <div class="row g-0 align-items-center">
                            <div class="col-md-2">
                                <img src="/images/default.jpg" class="img-fluid rounded" alt="<%= item.title %>">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h5 class="card-title"><%= item.title %></h5>
                                    <p class="card-text text-muted">Price: Ksh <%= item.price %></p>
                                    <p class="card-text">Quantity: 
                                        <input type="number" value="<%= item.quantity %>" min="1" class="form-control d-inline-block" style="width: 70px;">
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-3 text-end">
                                <h4 class="text-primary">Ksh <%= (item.quantity * item.price).toFixed(2) %></h4>
                                <button class="btn btn-sm btn-outline-danger mt-2">Remove</button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <div class="col-lg-4">
                <div class="card p-4 bg-light">
                    <h3 class="h4 mb-3">Order Summary</h3>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Total Items:</span>
                        <span class="fw-bold"><%= cart.totalQuantity %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="h5">Subtotal:</span>
                        <span class="h5 text-primary fw-bold">Ksh <%= cart.totalAmount.toFixed(2) %></span>
                    </div>
                    <a href="/shop/checkout" class="btn btn-primary btn-lg w-100">Proceed to Checkout</a>
                </div>
            </div>
        </div>
    <% } %>
</main>

<%- include('../partials/footer.ejs') %>