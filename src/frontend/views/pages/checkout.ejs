<%- include('../partials/header.ejs', { pageTitle: pageTitle }) %>

<main class="container py-5">
    <h1 class="page-header">Secure Checkout</h1>

    <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <div class="row">
        <div class="col-md-7">
            <div class="card p-4">
                <h2 class="h4 mb-4">Contact & Shipping Information</h2>
                <form action="/shop/place-order" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= prefill.name %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= prefill.email %>" <%= isAuthenticated ? 'readonly' : '' %> required>
                        <% if (isAuthenticated) { %>
                            <div class="form-text">Logged-in user email cannot be changed here.</div>
                        <% } %>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" name="phone" value="<%= prefill.phone %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label">Shipping Address (Street, City/Town)</label>
                        <textarea class="form-control" id="address" name="address" rows="3" required><%= prefill.address %></textarea>
                    </div>
                    
                    <h2 class="h4 mb-4 mt-5">Payment Method</h2>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="payment_method" id="mpesa" value="mpesa" checked>
                        <label class="form-check-label" for="mpesa">
                            M-Pesa (Pay on Delivery/Upon Confirmation)
                        </label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="payment_method" id="cash" value="cash" disabled>
                        <label class="form-check-label" for="cash">
                            Cash on Delivery (Available in select areas)
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 mt-4">Place Order - Ksh <%= cart.totalAmount %></button>
                </form>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card p-4 bg-light sticky-top" style="top: 80px;">
                <h3 class="h5 mb-3 text-muted">Items in Cart</h3>
                <ul class="list-group list-group-flush mb-4">
                    <% cart.items.forEach(item => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center bg-light">
                            <div><%= item.title %></div>
                            <span class="text-muted"><%= item.quantity %> x Ksh <%= item.price %></span>
                        </li>
                    <% }); %>
                </ul>
                
                <hr>

                <div class="d-flex justify-content-between mb-3">
                    <span>Subtotal:</span>
                    <span class="fw-bold">Ksh <%= cart.totalAmount.toFixed(2) %></span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span>Shipping Fee:</span>
                    <span class="fw-bold text-success">Ksh 0.00 (Free)</span>
                </div>
                
                <div class="d-flex justify-content-between pt-3 border-top border-primary">
                    <span class="h4">Total to Pay:</span>
                    <span class="h4 text-primary fw-bold">Ksh <%= cart.totalAmount.toFixed(2) %></span>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs') %>