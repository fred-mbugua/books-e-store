<%- include('../../partials/header.ejs', { pageTitle: 'Admin Dashboard' }) %>

<main class="container admin-dashboard py-5">
    <h1 class="page-header">Admin Control Panel</h1>
    <p class="lead text-muted">Quick access to manage the catalog, orders, and reports.</p>

    <div class="dashboard-grid">
        
        <div class="dashboard-card card p-4 border-info border-3 border-start">
            <h2 class="h5">Order Management</h2>
            <p>Review, process, and update customer order statuses.</p>
            <a href="/admin/orders" class="btn btn-info mt-auto">View All Orders</a>
        </div>

        <div class="dashboard-card card p-4 border-primary border-3 border-start">
            <h2 class="h5">Catalog Management</h2>
            <p>Add, edit, or remove books from the online catalog.</p>
            <a href="/admin/books" class="btn btn-primary mt-auto">Manage Books</a>
        </div>

        <% if (user.roleId === 1) { %>
            <div class="dashboard-card card p-4 border-success border-3 border-start">
                <h2 class="h5">Business Reports</h2>
                <p>Generate sales, orders, and user reports (Excel downloads).</p>
                <a href="/admin/reports" class="btn btn-success mt-auto">View Reports</a>
            </div>
        <% } %>

        <% if (user.roleId === 1) { %>
            <div class="dashboard-card card p-4 border-warning border-3 border-start">
                <h2 class="h5">User & Role Management</h2>
                <p>Manage user accounts and update their roles and permissions.</p>
                <a href="/admin/users" class="btn btn-warning mt-auto">Manage Users</a>
            </div>
        <% } %>

    </div>
</main>

<%- include('../../partials/footer.ejs') %>